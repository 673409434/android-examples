<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:foreground="@drawable/dim"
    tools:context="com.nex3z.examples.popupexample.PopupWindowDemoActivity"
    tools:foreground="">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_dim_by_window_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_dim_by_window_manager"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_dim_by_view_group_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_dim_by_view_group_overlay"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_dim_by_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_dim_by_drawable"
            android:textAllCaps="false"/>

    </LinearLayout>

</FrameLayout>